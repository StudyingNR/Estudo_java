function Pessoa() {
    this.idade = 0

    const self = this
    setInterval(function () {
        self.idade++ 
        console.log(self.idade)   
    }/*.bind(this)*/, 1000 )
    
} //Essa function imprimi idade de pessoa a cada segundo

new Pessoa


